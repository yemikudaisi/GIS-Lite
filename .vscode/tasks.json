{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "python",
            "type": "shell",
            "command": "python",
            "args": ["app.py"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {}
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "find",
            "args": [
                ".",
                "-type",
                "f",
                "-name",
                "'*.pyc'",
                "-delete"
            ],
            "problemMatcher": {}
        }
    ]
}